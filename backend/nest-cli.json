{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "flat": true,
    "spec": false
  },
  "compilerOptions": {
    "assets": [
      "**/*.html",
      "**/*.hbs"
    ],
    "watchAssets": true,
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true,
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".entity.ts"
          ]
        }
      }
    ]
  }
}