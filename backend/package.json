{
  "name": "@bosancz/bosancz-interni-backend",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:watch": "nest build --watch",
    "start": "node dist/main.js",
    "start:dev": "npm run dev",
    "dev": "nest start --debug --watch",
    "cli": "node dist/main-cli",
    "upgrade:check": "npx npm-check-updates",
    "upgrade": "npx npm-check-updates -u && npm install",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d ./src/database/data-source.ts",
    "migrations:generate": "npm run typeorm migration:generate ./src/database/migrations/$npm_config_name",
    "migrations:create": "npm run typeorm migration:create ./src/database/migrations/$npm_config_name",
    "migrations:run": "npm run typeorm migration:run",
    "migrations:revert": "npm run typeorm migration:revert",
    "migrations:drop-schema": "npm run typeorm schema:drop",
    "migrations:reset": "npm run migrations:drop-schema && npm run migrations:run"
  },
  "dependencies": {
    "@eslint/js": "^9.20.0",
    "@nestjs/common": "^11.0.9",
    "@nestjs/core": "^11.0.9",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mongoose": "^11.0.1",
    "@nestjs/platform-express": "^11.0.9",
    "@nestjs/serve-static": "^5.0.2",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "change-case": "^5.4.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "googleapis": "^144.0.0",
    "handlebars": "^4.7.8",
    "hbs": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.5.0",
    "mime-types": "^2.1.35",
    "mongoose": "^8.10.0",
    "nest-commander": "^3.16.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript-eslint": "^8.24.0",
    "write-excel-file": "^2.0.11"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/hbs": "^4.0.4",
    "@types/jest": "29.5.14",
    "@types/luxon": "^3.4.2",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.12.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "29.7.0",
    "prettier": "^3.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}